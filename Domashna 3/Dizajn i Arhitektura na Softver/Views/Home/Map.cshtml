<!DOCTYPE html>
@{
    ViewBag.Title = "Map";
}


<style>
    #map {
        height: 500px;
        width: 1000px;
    }

    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }
</style>

<div class="row">
    <div id="map"></div>
    <script>
        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 41.6086, lng: 21.7453 },
                zoom: 8
            });
        }
    </script>
    <script defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCJau8R5ITL010UEDY76YAyhbGRUixpPz8&callback=initMap">
    </script>
</div>